<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="5dp"
    app:cardCornerRadius="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    tools:context=".features.home.view.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constLayout"
        android:layout_width="match_parent"
        android:layout_height="454dp">

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            tools:text="Category" />

        <TextView
            android:id="@+id/txtArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/txtCategory"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            tools:text="Area" />

        <!-- 50% transparent black -->

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="563dp"
            android:layout_height="344dp"
            android:layout_marginTop="-10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/gradient"
            android:layout_width="560dp"
            android:layout_height="422dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgView"
            app:layout_constraintStart_toStartOf="@+id/imgView"
            app:srcCompat="@drawable/gradient" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="223dp"
            android:layout_height="33dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/imgView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_wrapBehaviorInParent="included"
            tools:text="Meal Name" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:background="@drawable/baseline_fastfood_24"
            app:layout_constraintStart_toStartOf="@+id/txtName"
            app:layout_constraintTop_toBottomOf="@+id/imgView" />

        <Button
            android:id="@+id/btnAddToFav"
            android:layout_width="43dp"
            android:layout_height="54dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="96dp"
            android:backgroundTint="@color/holo_red"
            android:foreground="@drawable/baseline_bookmark_add_24"
            android:foregroundGravity="center"
            android:text="@string/add"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/baseline_map_24"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>